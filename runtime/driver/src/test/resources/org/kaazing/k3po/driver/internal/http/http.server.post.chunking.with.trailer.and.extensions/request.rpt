accept "http://localhost:8000/"
accepted
connected

read http:method "POST"
read http:header "Content-Type" "text/plain"
read http:header "Transfer-Encoding" "chunked"
read http:header "Trailer" "Trailing-Header"
read "Chunk A"
read "Chunk B"
# Not supported in netty 3.9
# write option chunkExtension "some-extension-value"
read "Chunk C"
read http:trailer "Trailing-Header" "trailer-value"
read closed

write http:status "200" "OK"
write http:header "Content-Length" "7"
write "content"
write close

