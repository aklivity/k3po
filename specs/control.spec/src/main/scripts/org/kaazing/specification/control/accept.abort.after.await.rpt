accept "tcp://localhost:12345"
accepted
connected

read "PREPARE\n"
read "version:2.0\n"
read "name:org/kaazing/specification/control/assets/server\n"
read "name:org/kaazing/specification/control/assets/client.with.barriers\n"
read "\n"

write "PREPARED\n"
write "barrier:AWAITING_BARRIER\n"
write "barrier:NOTIFYING_BARRIER\n"
write "content-length:257\n"
write "\n"
write "# server\n"
write "property uri \"tcp://localhost:8000\"\n"
write "accept ${uri}\n"
write "accepted\n"
write "connected\n"
write "read \"echo\"\n"
write "write \"echo\"\n"
write "close\n"
write "closed\n"
write "# client\n"
write "connect \"tcp://localhost:8000\"\n"
write "connected\n"
write "read notify NOTIFYING_BARRIER\n"
write "write await AWAITING_BARRIER\n"
write "write \"echo\"\n"
write "read \"echo\"\n"
write "closed\n"

read "AWAIT\n"
read "barrier:NOTIFYING_BARRIER\n"
read "\n"

read "ABORT\n"
read "\n"

write "FINISHED\n"
write "awaiting:AWAITING_BARRIER\n"
write "awaiting:NOTIFYING_BARRIER\n"
write "content-length:70\n"
write "\n"
write "# server\n"
write "property uri \"tcp://localhost:8000\"\n"
write "accept ${uri}\n"
write "\n"
write "# client\n"
write "\n"

close
